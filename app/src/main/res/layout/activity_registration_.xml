<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cast_expanded_controller_background_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_registration_"
    tools:context="com.example.michael.myapplicationnew.Registration_Activity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:layout_collapseParallaxMultiplier="0.5"
        android:alpha="0.7">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/login_pix"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:background="@drawable/login_pix"
        android:layout_marginBottom="15dp"
        android:alpha="0.6">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:src="@drawable/login_text"
        android:id="@+id/imageView4"
        />
    </RelativeLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:hint="Username"
        android:id="@+id/editText_username"
        android:layout_alignBottom="@+id/name"
        android:textColorHint="#ffffff"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:typeface="normal"
        style="@android:style/Widget.Holo.AutoCompleteTextView"
        android:fontFamily="sans-serif"
        android:textSize="10sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:ems="10"
        android:id="@+id/editText_email"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:elevation="3dp"
        android:hint="Email"
        android:textColorHint="#ffffff"
        style="@android:style/Widget.Holo.AutoCompleteTextView"
        android:typeface="normal"
        android:fontFamily="sans-serif"
        android:textSize="10sp" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:ems="10"
        android:id="@+id/editText_password"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:elevation="3dp"
        android:hint="Password"
        android:textColorHint="#ffffff"
        style="@android:style/Widget.Holo.AutoCompleteTextView"
        android:typeface="normal"
        android:fontFamily="sans-serif"
        android:textSize="10sp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:id="@+id/confirm_pass"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:hint="Confirm Password"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:textColorHint="#ffffff"

        android:elevation="3dp"
        style="@android:style/Widget.Holo.AutoCompleteTextView"
        android:typeface="normal"
        android:fontFamily="sans-serif"
        android:textSize="10sp" />

    <Button
        android:text="SIGN UP"
        android:layout_width="97dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"

        android:id="@+id/button_register"
        style="@android:style/Widget.Button"
        android:background="@android:drawable/btn_default_small"
        android:textStyle="normal|bold"
        android:textColor="?attr/colorPrimary"
        android:elevation="15dp"
        android:textAlignment="center"
        android:textSize="11sp" />


</LinearLayout>








</ScrollView>
</RelativeLayout>